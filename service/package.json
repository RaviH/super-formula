{
    "name": "super-formula-interview",
    "version": "1.0.0",
    "description": "",
    "license": "UNLICENSED",
    "repository": "",
    "main": "src/graphql.js",
    "scripts": {
        "start": "node build/main.js",
        "dev": "ts-node --files ./src/main.ts",
        "build": "tsc",
        "watch": "TEST_MODE=true nodemon",
        "prebuild": "rimraf build",
        "clean": "rimraf build",
        "start:db": "java -Djava.library.path=./test/dynamodb_local_latest/DynamoDBLocal_lib -jar ./test/dynamodb_local_latest/DynamoDBLocal.jar -sharedDb",
        "pretest": "pm2 start yarn --interpreter bash --name api -- watch && pm2 start yarn --interpreter bash --name api -- start:db",
        "test": "TS_NODE_PROJECT=\"test/tsconfig.testing.json\" mocha -r ts-node/register test/**/*test.ts",
        "posttest": "pm2 delete api"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.14.0",
        "apollo-server-lambda": "^2.24.0",
        "dotenv": "^8.2.0",
        "graphql": "^15.5.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.1",
        "chai": "^4.3.4",
        "chai-shallow-deep-equal": "^1.4.6",
        "easygraphql-tester": "^6.0.1",
        "mocha": "^8.3.2",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "pm2": "^4.5.6",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    }
}
